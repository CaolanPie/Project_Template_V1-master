<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_lists"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="List of Lists Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <ListView
        android:id="@+id/list_of_lists"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/back_button" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addLists_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="listEntryPage"
        app:backgroundTint="?android:attr/textColorHintInverse"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <!--
    <ListView
        android:id="@+id/listTable"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
    </ListView>
    -->

    <Button
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="backPage"
        android:text="Back"
        android:layout_above="@+id/addLists_button"
        android:layout_alignParentStart="true" />


</RelativeLayout>