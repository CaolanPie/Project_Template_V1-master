<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ocl.com.project_template_v1.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Screen." />

    <!--<Button
        android:text="Scan Page"
        android:id="@+id/scan_button"
        android:onClick="scanPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="166dp"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        -->

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scan_button"
        android:onClick="scanPage"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:layout_marginBottom="23dp"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Default List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current_list_name"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_alignBaseline="@+id/inventory_button"
        android:layout_alignBottom="@+id/inventory_button"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:text="Go"
        android:id="@+id/inventory_button"
        android:onClick="inventoryPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/current_list_name"
        android:layout_toEndOf="@+id/current_list_name" />

    <Button
        android:text="Settings"
        android:id="@+id/settings_button"
        android:onClick="settingsPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/scan_button"
        android:layout_toLeftOf="@+id/inventory_button"
        android:layout_toStartOf="@+id/inventory_button" />

    <Button
        android:text="List of Lists"
        android:id="@+id/lists_button"
        android:onClick="listsPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/settings_button"
        android:layout_alignEnd="@+id/settings_button" />

</RelativeLayout>
